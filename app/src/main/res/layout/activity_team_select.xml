<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sheep.electric.treasurehunt.TeamSelectActivity"
    android:orientation="vertical">

    // display name
    <TextView android:text="@string/enter_your_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_display" />

    // display hunt
    <TextView android:text="@string/enter_hunt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/hunt_name_display" />

    // display location
    <TextView android:text="@string/enter_hunt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/hunt_location_display" />

</LinearLayout>
